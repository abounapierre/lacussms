<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.abouna</groupId>
    <artifactId>smsbanking</artifactId>
    <version>2.0</version>
    <packaging>jar</packaging>

    <name>Lacus sms</name>
    
    <url>http://maven.apache.org</url>

    <properties>
        <finalJarName>lacussms</finalJarName>
        <applog>INFO</applog>
        <springBootversion>2.1.5.RELEASE</springBootversion>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <dbh2.version>1.4.191</dbh2.version>
        <maven.compiler.target>1.8</maven.compiler.target>
        <maven.compiler.source>1.8</maven.compiler.source>
    </properties>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.1.5.RELEASE</version>
    </parent>
    
    <repositories>
        <repository>
            <id>centralrepository</id>
            <url>
                http://central.maven.org/maven2
            </url>
        </repository>
        <repository>
            <id>jgoodiesrepository</id>
            <url>
                http://central.maven.org/maven2
            </url>
        </repository>
        <repository>
            <id>mssqlrepository</id>
            <url>
                https://mvnrepository.com/artifact/com.microsoft.sqlserver/mssql-jdbc
            </url>
        </repository>
    </repositories>

    <profiles>
        <profile>
            <id>genu</id>
            <properties>
                <spring.profiles.active>genu</spring.profiles.active>
            </properties>
        </profile>
        <profile>
            <id>smile</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <spring.profiles.active>smile</spring.profiles.active>
            </properties>
        </profile>
    </profiles>
    
    <build>
        <finalName>${finalJarName}</finalName>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <excludes>
                    <exclude>bd.properties</exclude>
                </excludes>
                <filtering>true</filtering>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>com.github.ulisesbocchio</groupId>
                <artifactId>jasypt-maven-plugin</artifactId>
                <version>3.0.3</version>
            </plugin>
        </plugins>
    </build>

